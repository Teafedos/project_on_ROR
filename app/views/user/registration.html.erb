<head><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script></head>

<div class="registr">
<h1>Регистрация</h1>
<%= form_with model: @user, url:datapush_user_index_path,  method: :get do |form| %>
  <div class="mb-3">
    <%= form.label value="Логин", :class => 'form-label'%><br>
    <%= form.text_field :login, :class => "form-control" %>
    <% @user.errors.full_messages_for(:login).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label  value="Пароль(минимально 6 символов)", :class => 'form-label'%><br>
    <%= form.text_field :secretpass, :class => "form-control" %>
    <% @user.errors.full_messages_for(:secretpass).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label value="Почта", :class => 'form-label' %><br>
    <%= form.text_field :mail, :class => "form-control" %>
    <% @user.errors.full_messages_for(:mail).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label value="Имя", :class => 'form-label' %><br>
    <%= form.text_field :nickname, :class => "form-control" %>
    <% @user.errors.full_messages_for(:nickname).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit value="Зарегистрироваться"%>
  </div>
<% end %>

<%= link_to "Уже зарегистрированы?", authorization_path%>
</div>

